{#
  Card Link Component
  Individual card with image, title, and link
  
  Variables:
  - image (string): Image URL or render array
  - title (string): Card title
  - link (string): URL to link to
  - link_text (string, optional): Link text (default: "Ver m√°s")
#}
<a href="{{ link }}" class="c-card-link">
	<div class="c-card-link__image">
		{% if image is iterable %}
			{{ image }}
		{% else %}
			<img src="{{ image }}" alt="{{ title }}"/>
		{% endif %}
	</div>
	<div class="c-card-link__content">
		<h3 class="c-card-link__title">{{ title }}</h3>
	</div>
</a>
