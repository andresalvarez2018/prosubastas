{#
/**
 * @file
 * Template for the auction header component.
 *
 * Available slots:
 * - branding: Site logo and branding elements
 * - navigation: Primary navigation menu
 * 
 * Available props:
 * - cta_text: CTA button text
 * - cta_url: CTA button URL
 */
#}

{% set header_classes = [
  'auction-header',
  'component',
  'component--auction-header'
] %}

<header{{ attributes.addClass(header_classes) }}>
  <div class="container header-inner">
    
    <!-- Logo Section -->
    <div class="logo">
      {% block branding %}
        <!-- Site branding will be inserted here -->
      {% endblock %}
    </div>

    <!-- Mobile Menu Toggle -->
    <button class="mobile-menu-toggle" 
            aria-label="{{ 'Toggle navigation menu'|t }}"
            aria-expanded="false"
            aria-controls="mobile-menu">
      <span class="hamburger">
        <span class="hamburger__line"></span>
        <span class="hamburger__line"></span>
        <span class="hamburger__line"></span>
      </span>
    </button>

    <!-- Main Navigation -->
    <nav class="main-nav" aria-label="{{ 'Main navigation'|t }}">
      {% block navigation %}
        <!-- Primary navigation will be inserted here -->
      {% endblock %}
    </nav>

    <!-- Header CTA Section -->
    <div class="header-cta">
      <a href="{{ cta_url|default('#') }}" 
         class="btn btn-secondary header-cta__button">
        <span class="btn__text">{{ cta_text|default('Ingresar') }}</span>
      </a>
    </div>

  </div>

  <!-- Mobile Menu -->
  <div class="mobile-menu" 
       id="mobile-menu"
       aria-hidden="true"
       role="menu">
    <nav class="mobile-menu__nav" aria-label="{{ 'Mobile navigation'|t }}">
      <div class="mobile-menu__content">
        <!-- Navigation will be cloned here via JavaScript -->
      </div>
    </nav>
  </div>
</header>